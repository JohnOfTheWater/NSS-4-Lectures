doctype html //[if IE 9]><html class="lt-ie10" lang="en" > <![endif]
html(class='no-js', lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Animal Shelter
    link(rel='stylesheet', href='/css/normalize.css')
    link(rel='stylesheet', href='/css/foundation.css')
    link(rel='stylesheet', href='/css/app.css')
    script(src='/js/vendor/modernizr.js')
body
      .row
        .small-12.columns
          h1 Animal Shelter
      .row
        .small-12.columns
          form
            fieldset
              legend Animal Intake
              .row
                .small-3.columns
                  label Species
                  input#species(type='text', placeholder='species')
                .small-3.columns
                  label Color
                  input#color(type='text', placeholder='color')
                .small-3.columns
                  label Age
                  input#age(type='text', placeholder='age')
                .small-3.columns
                  button.small.alert.radius#add-animals Add Animals
              .row
                .small-3.columns
                  label Gender
                  input#gender(type='text', placeholder='gender')
                .small-3.columns
                  label Name
                  input#name(type='text', placeholder='Name')
                .small-1.columns
                  span.prefix http://
                .small-2.columns
                  label Photo url
                  input#photo(type='text', placeholder='enter your url...')
                .small-3.columns
                  button.tiny#add-photo Add Photo
              .row
                .small-12.columns
                  #img
              .row
                .small-11.columns
                  label Description
                  textarea#desc(type='text', placeholder='description')
          .row
            .small-12.columns
              table#table
                thead
                  th Name
                  th Species
                  th Age
                  th Gender
                  th Color
                  th Description
                  th Photos
                  th
                tbody#animalTable
    script(src='/js/vendor/jquery.js')
    script(src='/js/vendor/foundation.js')
    script(src='/js/vendor/lodash.js')
    script(src='/js/source/animal_factory.js')
    script(src='/js/source/animal.js')
    script(src='/js/source/main.js')
    script.
      $(document).foundation()

